{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "moduleResolution": "nodenext"
  },
  "include": ["./src/**/*", "./types/**/*", "./*.ts"]
}
